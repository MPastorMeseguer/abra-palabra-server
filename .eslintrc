{
  "extends": "standard",
  "env": {
    "mongo": true,
    "es6": true,
    "jquery": true,
    "browser": true,
    "node": true
  },
  "globals": {
    "google": false,
    "axios": false,
    "document": false,
    "window": false,
    "console": false
  },
  "parserOptions": {
    "ecmaVersion": 6
  },
  "rules": {
    "indent": [
      2,
      2
    ],
    "semi": [
      "error",
      "always"
    ],
    "no-unused-vars": "off",
    "no-multiple-empty-lines": "off",
    "eol-last": "off",
    "no-sequence": "never",
    "standard-property-even-spacing": "never",
    "quotes": [
      "error",
      "single"
    ],
    "comma-dangle": [
      "error",
      "never"
    ],
    "no-const-assign": "error",
    "prefer-const": "error",
    "no-console": [
      "error",
      {
        "allow": [
          "warn",
          "error"
        ]
      }
    ],
    "space-before-function-paren": [
      "error",
      "never"
    ],
    "space-in-parens": [
      "error",
      "never"
    ],
    "no-var": "error",
    "max-len": [
      "error",
      120
    ]
  }
}